<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:id="@+id/restaurant_id"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:orientation="vertical"
        android:background="@drawable/retangle"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/space5"
        android:elevation="3dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/resto_image"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/space10"
                android:layout_marginBottom="@dimen/space10"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/loading_shape"
               />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/resto_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:text="Winter Shake"/>


                <TextView
                    android:id="@+id/resto_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LomÃ©"
                    android:textSize="14dp"
                    android:textColor="#2d2d2d"
                    android:layout_marginTop="3dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/resto_numero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="#b2b2b2"
                    android:text="92363533" />

            </LinearLayout>




            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <RatingBar
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resto_rating"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/space10"
                    android:rating="5" />


                <TextView
                    android:id="@+id/resto_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textSize="12dp"
                    android:textColor="#b2b2b2"
                    android:text="Restaurant" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#E3E3E3"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/clock"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_clock"/>

            <TextView
                android:id="@+id/resto_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#b2b2b2"
                android:layout_gravity="center"
                android:textSize="12dp"
                android:text="7h -  23h , 7/7"/>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                     android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/space10"
                    android:background="@drawable/restaurant_menu"/>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>