                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profil_pic"
                    android:src="@drawable/girl" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#90000000"/>
            </com.pollen.community.Manager.CutLayout>



            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/add_pic"
                android:src="@drawable/ic_group_10"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="15dp"/>

        </FrameLayout>

          <RelativeLayout
              android:layout_marginTop="20sp"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="15sp"
                 android:layout_centerHorizontal="true"
                  android:text="Stephanie De Jesus"
                  android:textColor="#101010"
                  android:id="@+id/profil_username"
                  android:fontFamily="@font/opensans_regular"
                  />
              <ImageView
                  android:layout_width="70dp"
                  android:layout_height="20dp"
                    android:src="@drawable/com_accountkit_pencil"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="@dimen/space20"
                  android:id="@+id/profil_change"
                  />
          </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+22892363533"
            android:id="@+id/profil_phone"
            android:fontFamily="@font/opensans_regular"
            android:textSize="13sp"
            android:textColor="#D9DDE6"
            android:gravity="center"
            android:layout_marginTop="5dp"/>

