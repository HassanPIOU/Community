<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey100"
    tools:context=".fragment.RestaurantFragment">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:id="@+id/this_top"
     >
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:layout_gravity="center"
         android:text="Mes Transactions"
         android:fontFamily="@font/ubuntufont"
         android:layout_marginTop="@dimen/space20"
         android:layout_marginBottom="@dimen/space20"
         android:textSize="15dp"
         />

     <View
         android:layout_width="100dp"
         android:layout_height="1dp"
         android:background="@color/grey_80"
         android:layout_marginBottom="@dimen/space20"
         android:layout_gravity="center"
         />
 </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/this_top"
        android:id="@+id/transaction_recycler"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>