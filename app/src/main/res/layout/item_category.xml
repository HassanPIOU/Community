<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            >
            <ImageView
                android:id="@+id/CategoryImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:src="@drawable/loading_shape"
                android:scaleType="centerCrop"
                />

            <TextView
                android:layout_below="@+id/CategoryImage"
                android:textColor="#262626"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categorie"
                android:id="@+id/category"
                android:textSize="18dp"
                android:fontFamily="@font/ubuntufont"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                 />

            <TextView
                android:layout_below="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chaque categorie contient une liste de plats. "
                android:id="@+id/textexplicatif"
                android:textSize="12.5dp"
                android:fontFamily="@font/ubuntufont"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />

            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@id/textexplicatif"
                android:layout_centerHorizontal="true"
                android:background="@color/colorAccent"
                android:layout_marginTop="@dimen/space20"
                android:text="Voir"
                android:id="@+id/categorybox"
                android:textColor="@color/white"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>